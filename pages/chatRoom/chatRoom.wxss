/* pages/chatRoom/chatRoom.wxss */
.chatRoom{
  background-color: #ffffff;
  width: 100%;
  height: 88rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid lightgray;
  box-sizing: border-box;
  padding-left: 20rpx;
  padding-right: 10rpx;
}
.tchatRoom{
  background-color: #eeeeee;
  width: 100%;
  height: 88rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid lightgray;
  box-sizing: border-box;
  padding-left: 20rpx;
  padding-right: 10rpx;
}
page{
  background: #e0e0e0;
}
.search{
  height: 88rpx;
  border: 8px solid #ffffff;
  background-color: #c0c0c0;
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  box-sizing: border-box;
  padding-left: 20rpx;
  padding-right: 10rpx;
}
.unchat{
  font-size:15px;
  text-align: right;
  color: #d3d3d3;
}
.jwtz,
.kqtz,
.hdtz,
.kstz{
  margin:10px 0px 10px 0px;
  height: 30%;
  width:auto;
  border: 1px solid #e9e9e9;
  background: #ffffff;
}
.jwTitle,
.kqTitle,
.hdTitle,
.ksTitle{
  text-align: center;
  font-size:20px;
  font-weight: 400;
  display: block;
  border: none;
  border-radius: 3px;
}
.jwCtx,
.kqCtx,
.hdCtx,
.ksCtx{
  color: #d4d3d3;
  font-size: 12px;
  font-weight: 200;
  display: block;
}
.jwEtc,
.kqEtc,
.hdEtc,
.ksEtc{
  color: #8eb4fa;
  display: block;
  font-weight: 700;
  font-size: 12px;
  text-align: right;
}
.jwTag,
.kqTag,
.hdTag,
.ksTag{
  font-style: italic;
  font-weight: 700;
}